<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:id="@+id/card_playlist"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="4dp"
    android:layout_marginTop="4dp"
    app:cardCornerRadius="6dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/main_playlist_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/flightplanmusic" />

        <TextView
            android:id="@+id/main_playlist_text"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:lines="2"
            android:paddingLeft="4dp"
            android:paddingTop="6dp"
            android:text="Flight Plan (Tunes for Travel"
            android:textAlignment="viewStart"
            android:textColor="#4A4A4A"
            android:textSize="12sp" />

    </LinearLayout>

</android.support.v7.widget.CardView>